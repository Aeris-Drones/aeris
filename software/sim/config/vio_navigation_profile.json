{
  "_description": "VIO navigation validation profile for GPS-denied flight testing.",
  "_purpose": "Configures launch, orchestrator, and validation parameters for VIO-based navigation scenarios.",
  "launch": {
    "world": "software/sim/worlds/disaster_scene.sdf",
    "vehicles_config": "software/sim/config/multi_drone_gps_denied.json",
    "scout_model_name": "scout1",
    "gps_denied_mode": true,
    "position_source_mode": "vio_odometry"
  },
  "orchestrator": {
    "navigation_position_source": "vio_odometry",
    "vio_odom_stale_sec": 0.75,
    "scout_odometry_topics_json": {
      "scout1": "/scout1/openvins/odom",
      "scout2": "/scout2/openvins/odom"
    }
  },
  "drift_validation": {
    "duration_sec": 600,
    "vio_topic": "/scout1/openvins/odom",
    "ground_truth_topic": "/model/scout1/odometry",
    "max_rms_m": 3.0,
    "max_error_m": 8.0,
    "max_time_offset_sec": 0.25,
    "min_samples": 100,
    "output_dir": "output/vio_navigation_drift",
    "run_id": "latest"
  },
  "return_validation": {
    "target_vehicle_id": "scout1",
    "max_arrival_error_m": 2.0,
    "max_trajectory_update_latency_sec": 1.0,
    "require_fallback_reason_on_failure": true
  }
}
